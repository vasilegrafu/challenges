    "version": "0.2.0",
    "configurations": [
        //----------------------------------------------------------------
        {
            "name": "Start debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/build/debug/${fileBasenameNoExtension}",
            "args": [],
            "cwd": "${fileDirname}/build/debug",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build file for debug"
        },

        //----------------------------------------------------------------
        {
            "name": "Start release",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/build/release/${fileBasenameNoExtension}",
            "args": [],
            "cwd": "${fileDirname}/build/release",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build file for release"
        }
    ]
}