{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        //----------------------------------------------------------------
        {
            "label": "Build file for debug",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "g++.exe",
            "args": [
                "-std=c++17",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/build/debug/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },

        //----------------------------------------------------------------
        {
            "label": "Build file for release",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "g++.exe",
            "args": [
                "-std=c++17",
                "${file}",
                "-o",
                "${fileDirname}/build/release/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}